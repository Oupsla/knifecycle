{
  "name": "knifecycle",
  "version": "0.0.0",
  "description": "Manage your NodeJS processes's lifecycle.",
  "main": "dist/index.js",
  "scripts": {
    "cli": "env NPM_RUN_CLI=1",
    "test": "mocha --compilers js:babel-register src/**/*.mocha.js src/*.mocha.js",
    "compile": "babel src --out-dir=dist",
    "prepublish": "npm run compile",
    "coveralls": "node --harmony istanbul cover _mocha --report lcovonly -- --compilers js:babel-register src/*.mocha.js -R spec -t 5000 && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "cover": "istanbul cover --report html _mocha -- --compilers js:babel-register src/*.mocha.js -R spec -t 5000",
    "lint": "eslint src/*.js src/**/*.js tests/*.js"
  },
  "keywords": [
    "process",
    "lifecycle",
    "shutdown",
    "service"
  ],
  "author": "Nicolas Froidure (7Digital)",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-plugin-transform-async-to-module-method": "^6.8.0",
    "babel-plugin-transform-decorators": "^6.8.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-modules-systemjs": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "eslint": "^1.3.1",
    "eslint-config-simplifield": "^1.2.2",
    "istanbul": "^0.3.20",
    "mocha": "^2.3.2",
    "mocha-lcov-reporter": "^0.0.2",
    "sinon": "^1.16.1"
  },
  "dependencies": {
    "debug": "^2.2.0",
    "yerror": "^1.0.2"
  }
}
